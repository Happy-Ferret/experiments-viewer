@import 'lib';

.configuration {
  background-color: rgba(0,0,0,0.9);
  position: absolute;
  max-height: calc(100% - 120px);
  width: calc(100% - 120px);
  top: 100px;
  left: 60px;
  border-radius: 6px;
  font-weight: 100;
  font-size: 14px;

  h3 {
    font-weight: 100;
    font-size: 16px;
    background-image: linear-gradient(270deg, #001021 0%, #00224A 100%);
    margin-top: 0;
    border-radius: 6px 6px 0 0;
    line-height: 40px;
    padding: 0 15px;
  }
}

.configuration-mask {
  display: none;
  position: absolute;
  height: 100vh;
  width: 100vw;
  z-index: 50;
  background-color: rgba(0,34,74,0.9);
  top: 0;
  left: 0;

  .configuration-open & {
    display: block;
  }
}

.configuration-open {
  overflow: hidden;
}

.configure-data {
  border: 0;
  position: absolute;
  top: 7px;
  right: 10px;
}

.checkbox-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-bottom: 10px;

  h4 {
    font-weight: 100;
    width: 100%;
    border-bottom: 1px solid $dark-blue;
    text-align: center;
    line-height: 40px;
    font-size: 15px;
    margin-top: -10px;
  }
  > label {
    width: 25%;
    line-height: 40px;
    padding: 0 10px;
    cursor: pointer;

    &:hover {
      background-color: $dark-blue;

      &::after {
        display: block;
      }
    }
    &::after {
      position: fixed;
      bottom: 50px;
      left: 0;
      width: 100%;
      text-align: center;
      content: attr(data-description);
      line-height: 20px;
      display: none;
      font-size: 12px;
      color: $xtreme-green;
    }
  }
}

.configuration-link {
  width: 30px;
  height: 30px;
  cursor: pointer;
  background-size: contain;
  border-radius: 15px;
  position: relative;
  top: -4px;
}
