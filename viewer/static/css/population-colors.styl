@import 'lib';

// See https://sashat.me/2017/01/11/list-of-20-simple-distinct-colors/
$colors = $mild-blue, #e6194b, #3cb44b, #ffe119, #f58231, #911eb4, #46f0f0, #fabebe;

for $color, $zero-based-index in $colors {
  $ordinal = $zero-based-index + 1;

  [data-population-id={'"' + $ordinal + '"'}] {
    line, .line, .focus {
      stroke: $color;
    }

    .population-name {
      color: $color;
    }
  }
}
