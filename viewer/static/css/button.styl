@import 'lib';

$btn-small-height = 26px;

$btn-color = rgb(17, 63, 120);
$btn-color-disabled = rgb(0, 34, 74);
$btn-color-hover = rgb(37, 83, 140);

$alt-btn-color = rgb(86, 146, 23);
$alt-btn-color-disabled = rgb(58, 98, 16);
$alt-btn-color-hover = rgb(106, 166, 43);

$txt-color = #fff;

.button {
  background-color: $btn-color;
  border-radius: 3px;
  color: $txt-color;
  cursor: pointer;
  font-size: 12px;
  font-weight: 200;
  padding: 0 10px;
  border: 0;
  line-height: 30px;
  display: inline-block;

  &:hover {
    background-color: $btn-color-hover;
  }
  &.is-fetching, &[disabled] {
    cursor: default;
    background-color: $btn-color-disabled;

    &:hover {
      background-color: $btn-color-disabled;
    }
  }
  &[disabled] {
    color: rgba(255, 255, 255, 0.3);
  }
  &.is-fetching {
    min-height: inherit;
    color: rgba(0, 0, 0, 0);
  }
  .fetching {
    font-size: 1rem;
    margin: -15px 0 0 -25px;
    color: $txt-color;
  }
}

.alt {
  background-color: $alt-btn-color;

  &.is-fetching, &[disabled] {
    background-color: $alt-btn-color-disabled;

    &:hover {
      background-color: $alt-btn-color-disabled;
    }
  }
  &[disabled] {
    color: rgba(255, 255, 255, 0.3);
  }
  &:hover {
    background-color: $alt-btn-color-hover;
  }
}

.btn-small {
  height: $btn-small-height;
  line-height: $btn-small-height;

  .fetching {
    margin: -13px 0 0 -25px;
  }
}
