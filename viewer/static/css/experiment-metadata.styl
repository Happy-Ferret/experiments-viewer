@import 'lib';

$grid-padding = $min-padding;

.experiment-metadata {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  grid-gap: $grid-padding;
  grid-template-areas:
    "top top" \
    "middle middle" \
    "bottom-left bottom-right";
}

.experiment-name {
  grid-area: top;
  font-weight: bold;
}

.experiment-date {
  grid-area: middle;
}

.experiment-num-clients {
  grid-area: bottom-left;

}

.experiment-num-pings {
  grid-area: bottom-right;
  justify-self: end;
}
