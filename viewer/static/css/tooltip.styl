/* Based on: https://jsfiddle.net/greypants/zgCb7/ */

$tooltip-margin-top = 15px;
$tooltip-background-color = rgba(255, 255, 255, .9);

.tooltip-wrapper {
  position: relative;

  .tooltip {
    background: $tooltip-background-color;
    box-sizing: border-box; /* Because we want to give it padding but we also want it to have exactly the same width as the hover box */
    color: #000;
    left: 0px;
    padding: 10px;
    pointer-events: none;
    top: 100%; /* Place the tooltip below the hover box */
    margin-top: $tooltip-margin-top; /* Space it out from the hover box */
    position: absolute;
    width: 100%;
    text-align: center;
    z-index: 99;

    /* Behavior */
    transition: all .25s ease-out;
    transform: translateY(-10px); /* Makes the tooltip "slide in" when appearing */
    opacity: 0;

    /* Triangle */
    &:before {
      border-left: solid transparent 10px;
      border-right: solid transparent 10px;
      border-bottom: solid $tooltip-background-color 10px;
      top: -10px;
      content: " ";
      height: 0;
      left: 50%;
      margin-left: -13px;
      position: absolute;
      width: 0;
    }
  }
}

.tooltip-hover-target:hover + .tooltip {
  pointer-events: auto;
  transform: translateY(0);
  opacity: 1;
}

