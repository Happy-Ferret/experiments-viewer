@import 'lib';

#login {
  main {
    width: 100%;
    display: block;
  }

  p {
    text-align: center;

  }
  .auth-help {
    padding-top: $med-padding;
    font-size: 11px;
  }
}

.g-signin2 {
  display: inline-block;
  margin: 0 5px;
  vertical-align: middle;

  /* The button text ordinarily changes from "Sign in" to "Signed in" before the
     page redirects. Disable that behavior so that the button can be placed
     mid-sentence as part of the instructions. */
  span[id^="not_signed_in"] {
    display: inline !important;
  }
  span[id^="connected"] {
    display: none !important;
  }
}
