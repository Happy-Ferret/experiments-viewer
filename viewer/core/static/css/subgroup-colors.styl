@import 'lib';

/*
Colors selected by playing around with [1] with $mild-blue as the base color. To
be honest, I don't know much about color theory, but these looked like they fit
pretty well with our colorscheme.

[1] http://www.colorschemer.com/online.html

- openjck
*/
$colors = {
  'control': $mild-blue,
  'group A': #9b4be2,
  'group B': #e24b91,
  // Below, some suitable colors for future subgroups:
  // 'TBD': #f3d6b4,
  // 'TBD': #dde24b,
  // 'TBD': #4be29b,
  // 'TBD': #de8f35,
  // 'TBD': #de3b35,
};

for $subgroup, $color in $colors {
  [data-subgroup={'"' + $subgroup + '"'}] {
    line, .line, .focus {
      stroke: $color;
    }

    .subgroup-name {
      color: $color;
    }
  }
}
