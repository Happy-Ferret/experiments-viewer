.chart-config {
  display: flex;
  min-height: 40px;
  background-image: radial-gradient(40% 728%, rgba(126, 211, 33, 0.3), #000000);
  margin: -20px 0 20px;
  padding: 10px 15px;
  justify-content: space-between;

  > * {
    align-self: flex-start;
  }
}

.dataset-config-content {
  width: 600px;
  display: flex;
  justify-content: space-between;
  margin-left: -15px;
  background-color: rgba(126, 211, 33, 0.3);
  border-radius: 4px;
  height: 40px;
  padding: 0 15px;

  > * {
    align-self: center;
  }
}

.dataset-cohorts {
  display: flex;
  width: 100%;

  > * {
    margin: 0 8px;
  }
}
